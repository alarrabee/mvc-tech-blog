<h1>Your Dashboard</h1>

<!--set up each statement to display all posts for logged in user on the dashboard-->
{{#each posts}}
  {{> user-post-details}}
{{/each}}

<!--form to submit a new post-->
<div class="post-form-card">
    <div class="post-header">
        <h2 class="new-post-form-title">Create New Post</h2>
    </div>
    <form class="new-post-form">
    <div>
        {{!-- <label for="post-title">Post Title</label> --}}
        Title:<br>
        <input class="form-input" type="text" id="post-title"/>
    </div>
    <div>
        {{!-- <label for="post-content">Start writing</label> --}}
        Content:<br>
        <input class="form-input" type="text" id="post-content"/>
    </div>
    <div>
        <button class="btn" type="submit">Submit</button>
    </div>
    </form>
</div>

<script src="/js/new-post.js"></script>
